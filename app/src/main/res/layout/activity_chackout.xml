<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacraunt_main_gradient"
    tools:context=".screen.main.order.checkout.ChackoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nazad"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/angle_left"
                app:tint="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="Chackout"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profile"
                app:tint="@color/white" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Choose the application method"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Enter the locatin"
            android:textColor="#717171"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:hint="Address"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxStrokeColor="@color/selector"
                app:hintTextColor="@color/grey_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtiAdres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_color" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/btnMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:cardBackgroundColor="@color/color_primary"
                app:cardCornerRadius="10dp"
                app:contentPadding="16dp"
                app:cornerRadius="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gps"
                    app:tint="@color/white" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            android:textColor="@color/white"
            android:text="Choose the application method"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">
            
            <LinearLayout
                android:id="@+id/lyPaymecash"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:background="@drawable/shape_active"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgPaymecash"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/cash"
                    app:tint="@color/color_accent"/>
                <TextView
                    android:id="@+id/tvPaymecash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:textColor="@color/color_accent"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyPaymecard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center"
                android:background="@drawable/shape_inactive"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgPaymecard"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/credit_card"
                    app:tint="@color/grey_color"/>
                <TextView
                    android:id="@+id/tvPaymecard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit card"
                    android:textColor="@color/grey_color"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:background="@drawable/raundent_becraunt_shape"
            android:padding="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Totol"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="134 000 sum"
                android:textColor="@color/color_accent" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnchackout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="Chack out"
            android:textColor="@color/white"
            app:backgroundTint="@color/color_primary"
            app:cornerRadius="10dp"/>
    </LinearLayout>

</FrameLayout>
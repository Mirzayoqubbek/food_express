<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacraunt_gradient"
    tools:context=".screen.auth.RegstrationActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginTop="76dp"
                android:src="@drawable/logo_harizantal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:gravity="center"
                android:textSize="32sp"
                android:layout_marginTop="60dp"
                android:textColor="@color/white"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:layout_marginTop="24dp"
                android:hint="Fulname"
                app:hintTextColor="@color/grey_color"
                app:boxStrokeColor="@color/selector"
                app:boxCornerRadiusBottomStart="8dp"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvFulname"
                    android:layout_width="match_parent"
                    android:inputType="textPersonName"
                    android:textColor="@color/grey_color"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:layout_marginTop="16dp"
                android:hint="Phone"
                app:hintTextColor="@color/grey_color"
                app:boxStrokeColor="@color/selector"
                app:boxCornerRadiusBottomStart="8dp"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:inputType="phone"
                    android:textColor="@color/grey_color"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:layout_marginTop="16dp"
                android:hint="Password"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/grey_color"
                app:hintTextColor="@color/grey_color"
                app:boxStrokeColor="@color/selector"
                app:boxCornerRadiusBottomStart="8dp"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvPassword"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:textColor="@color/grey_color"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:layout_marginTop="16dp"
                android:hint="RePassword"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/grey_color"
                app:hintTextColor="@color/grey_color"
                app:boxStrokeColor="@color/selector"
                app:boxCornerRadiusBottomStart="8dp"
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvRePassword"
                    android:layout_width="match_parent"
                    android:inputType="textPassword"
                    android:textColor="@color/grey_color"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegistration"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                app:cornerRadius="10dp"
                android:text="Registration"/>

            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_color"
                android:textSize="16sp"
                android:text="Login"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>